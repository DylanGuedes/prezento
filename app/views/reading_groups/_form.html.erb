<%= form_for(@reading_group, :html => { role: 'form' }) do |f| %>
  <%= render :partial => 'shared/form_errors', :locals => {:object => @reading_group} %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label' %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'control-label' %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
  
  <%= link_to 'Back', reading_groups_path, class: 'btn btn-default' %>
<% end %>
