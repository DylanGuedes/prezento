<div class="page-header">
  <h1>New Compound Metric Configuration</h1>
</div>

<div id="created-metrics-accordion">
    <h3> Created Metrics </h3>
    <div>
    <table class="table table-hover">
      <thead>
        <th>Name</th>
        <th>Code</th>
      </thead>
      <tbody>
        <% @metric_configurations.each do |metric_configuration| %>
          <tr>
            <td><%= metric_configuration.metric.name %></td>
            <td><%= metric_configuration.code %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
</div>

<br>

<%= form_for(@compound_metric_configuration, :url => mezuro_configuration_compound_metric_configurations_path(@compound_metric_configuration.configuration_id)) do |f| %>
  <%= render partial: 'form', locals: {f: f} %>
<% end %>

<script type="text/javascript">
  //Loads the accordion
  $(function() {
    $( "#created-metrics-accordion" ).accordion({
      heightStyle: "content",
      collapsible: true,
    });
  });
</script>
