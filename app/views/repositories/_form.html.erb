<%= render :partial => 'shared/form_errors', :locals => {:object => @repository} %>

<div class="form-group">
  <%= f.label :name, class: 'control-label' %><br>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :type, class: 'control-label' %><br>
  <%= f.select( :type, @repository_types, {class: 'form-control'} ) %>
</div>

<div class="form-group">
  <%= f.label :address, class: 'control-label' %><br>
  <%= f.text_field :address, class: 'form-control' %>
</div>

<div class="form-group">
   <%= f.label :configuration, class: 'control-label' %><br/>
  <% configuration_list = KalibroGem::Entities::Configuration.all.map { |conf| [conf.name, conf.id] } %>
  <%= f.select( :configuration_id, configuration_list, {class: 'form-control'} ) %>
</div>

<%= f.submit 'Save', class: 'btn btn-primary' %>
