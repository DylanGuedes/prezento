<%= render :partial => 'shared/form_errors', :locals => {:object => @repository} %>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :type %><br>
  <%= f.select( :type, @repository_types ) %>
</div>

<div class="field">
  <%= f.label :address %><br>
  <%= f.text_field :address %>
</div>

<div class="field">
   <%= f.label :configuration %><br/>
  <% configuration_list = KalibroEntities::Entities::Configuration.all.map { |conf| [conf.name, conf.id] } %>
  <%= f.select( :configuration_id, configuration_list ) %>
</div>

<div class="actions">
  <%= f.submit %>
</div>

