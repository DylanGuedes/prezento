<div class="page-header">
  <h1>Choose a metric from a base tool:</h1>
</div>

<div id="base-tool-accordion">
  <% @base_tools.each do |base_tool| %>
      <h3><%= base_tool.name %></h3>
      <div>
        <% base_tool.supported_metrics.each do |metric| %>
          <%= link_to metric.name, mezuro_configuration_new_metric_configuration_path(@mezuro_configuration_id, metric.name, base_tool.name) %><br>
        <% end %>
      </div>
  <% end %>
</div><br />

<%= link_to 'Compound Metric',  mezuro_configuration_new_compound_metric_path(@mezuro_configuration_id), class: 'btn btn-default' %>

<script type="text/javascript">
  //Loads the accordion
  $(function() {
    $( "#base-tool-accordion" ).accordion({
      heightStyle: "content",
      collapsible: true,
    });
  });
</script>
